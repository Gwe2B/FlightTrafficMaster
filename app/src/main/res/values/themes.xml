<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FlightMaster" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/mediumgray</item>
        <item name="colorOnSecondary">@color/darkgray</item>

        <!-- Customize your theme here. -->
        <item name="android:background">@color/mediumgray</item>

        <!-- Text Settings -->
        <item name="android:textColor">@color/darkgray</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/inter</item>

        <item name="spinnerStyle">@style/Theme.FlightMaster.Spinner</item>
        <item name="android:spinnerStyle">@style/Theme.FlightMaster.Spinner</item>

        <item name="statusBarBackground">@color/mediumgray</item>
        <item name="android:navigationBarColor">@color/mediumgray</item>
    </style>

    <!-- Spinners Style -->
    <style name="Theme.FlightMaster.Spinner" parent="Widget.AppCompat.TextView">
        <item name="overlapAnchor">true</item>
        <item name="android:background">@drawable/spinner_background</item>
    </style>
</resources>